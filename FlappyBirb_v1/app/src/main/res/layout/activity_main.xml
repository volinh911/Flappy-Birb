<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_day"
        android:id="@+id/back"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/play_button"
            android:layout_width="237dp"
            android:layout_height="114dp"
            android:layout_marginTop="190dp"
            android:contentDescription="@string/play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.188"
            app:srcCompat="@drawable/playbtn_fixed2"/>


    <Button
            android:id="@+id/change_btn"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:background="@drawable/blank_btn_fixed_2"
            android:onClick="@string/change_background_button"
            android:text="@string/change_background_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play_button"
            app:layout_constraintBottom_toTopOf="@+id/blank" app:layout_constraintEnd_toStartOf="@+id/set_tube_color"
    />

    <ImageView
            android:id="@+id/blank"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:background="@drawable/blank_btn_fixed_2"
            android:contentDescription="@string/blank"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="60dp" app:layout_constraintEnd_toStartOf="@+id/set_tube_color"
    />

    <Button
            android:id="@+id/set_bird_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellowbird_midflap"
            app:layout_constraintTop_toTopOf="@+id/blank"
            app:layout_constraintEnd_toEndOf="@+id/blank" app:layout_constraintBottom_toBottomOf="@+id/blank"
            app:layout_constraintStart_toStartOf="@+id/blank"/>

    <Button
        android:id="@+id/set_tube_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@drawable/pipe_green_up"
        android:text="@string/change_tube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>